//Write a program to find out the area of circle and circumstances of circle
import java.util.Scanner;

public class circumstanceofcircle

{
    public static void main(String[] args) 
   
    {
        Scanner sc=new Scanner(System.in);

        System.out.println("Enter the value for radius of the circle:");
        float r=sc.nextFloat();

        //Area Of Circle
        double Area=(3.14*r*r);
        System.out.println("Area of the circle is :-"+Area);

        //Circumstance Of Circle
        double circum=(2*3.14*r); 
        System.out.println("Circumstances of circle is :-"+circum);

    }
}
